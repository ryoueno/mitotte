<% content_for :sidebar do %>
  <%= render 'shared/side' %>
<% end %>
<main>
<h4>プロジェクト</h4>

<table class="highlight">
  <thead>
    <tr>
      <th>プロジェクト名</th>
      <th>概要</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr onclick="location.href='<%= project_path project.id %>'">
        <td><%= project.subject %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: '本当に削除すんの？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row right-align">
  <%= link_to new_project_path, :class => "btn-floating btn-large waves-effect waves-light" do %>
    <i class="material-icons">add</i>
  <% end %>
</div>
</main>